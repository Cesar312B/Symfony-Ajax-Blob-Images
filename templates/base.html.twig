         <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
        {% endblock %}
    </head>
 {% if is_granted('IS_AUTHENTICATED_FULLY') %}
<a class="btn" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
<i class="fa-solid fa-bars"></i>
</a>
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
  <div class="offcanvas-header">
    <img  class="rounded" width="20%" height="50%" src="{{app.user.displayPhoto}}" >
    <h5 class="offcanvas-title" id="offcanvasExampleLabel">{{ app.user.Nombre }} {{ app.user.Apellido }}</h5>
  <div class="btn-group">
  <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"
   style="--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .50rem;">
  
  </button>
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="{{ path('forgot') }}">Cambiar Contrase√±a</a></li>
    <li><a class="dropdown-item" href="{{ path('user_profile', {'id': app.user.id}) }}">Editar Perfil</a></li>
    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Salir</a></li>
  </ul>
</div>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">

  <ul class="list-group list-group-flush">
  <li class="list-group-item">
   <a href="{{ path('app_user_index') }}" class="nav-link">
  <i class="fa fa-user-md" aria-hidden="true"></i>Medicos
  </li>
  <li class="list-group-item">
    <a href="{{ path('app_paciente_index') }}" class="nav-link">
                 <i class="fas fa-user-md"></i>
                  Pacientes
                </a>
  </li>
  
  <li class="list-group-item"><i class="fa fa-map-marker" aria-hidden="true"></i>Ubicaciones</li>
</ul>
    </div>
  </div>
</div>
{% endif %}
    <body>
      <div class="page-content p-3 ">
        {% block body %}
        
        {% endblock %}
     </div>
    </body>
</html>
